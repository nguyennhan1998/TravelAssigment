@model IEnumerable<TravelAssigments.Models.Location>
    
   

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Location List</h2>

<div class="col-lg-12 col-md-12" style="margin-bottom:50px;">
    <div class="row">
        @using (Html.BeginForm("Index", "Location", FormMethod.Get, new { @class = "d-none d-sm-inline-block form-inline mr-auto ml-md-6 my-2 my-md-0 mw-100 navbar-search col-lg-4 col-md-4" }))
        {


            <div class="input-group">
                @Html.TextBox("Search", ViewBag.CurrentFilter as string, new { @class = "form-control bg-light border-1 small" })
                <div class="input-group-append">
                    <button class="btn btn-primary" type="submit">
                        <i class="fas fa-search fa-sm"></i>
                    </button>
                </div>

            </div>


        }
        <div class="col-lg-2 col-md-2"></div>
        <div class="col-lg-6 col-md-6">
            <a href="/Location/Create" style="float:right" class="btn btn-primary">Create</a>
        </div>
    </div>
</div>
<table class="table">
    <tr>
        <th>
            @Html.ActionLink("Location Name", "Index", new
            {
                sortOrder = ViewBag.NameSortParm,

           currentFilter = ViewBag.CurrentFilter
       });
        </th>
        <th>
            LocationAddress
        </th>
        <th>
            LocationDescription
        </th>
        <th>
            Status
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.LocationName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LocationAddress)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LocationDescription)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Status)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.id }) |
            @Html.ActionLink("Details", "Details", new { id= item.id }) |
            @Html.ActionLink("Delete", "Delete", new { id= item.id })
        </td>
    </tr>
}

</table>
